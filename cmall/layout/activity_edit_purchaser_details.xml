<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_fw_all"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/purname"
            style="@style/bg_ww"
            android:layout_marginRight="@dimen/margin_right"
            android:gravity="right"
            android:text="名称"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <EditText
            android:id="@+id/et_edit_pur_name"
            style="@style/sty_edit_text"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/edittext_select"
            android:hint="请输入名称"
            android:maxLength="30"
            android:singleLine="true" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

    <TableRow
        android:id="@+id/trb_classify"
        style="@style/bg_fw_all"
        android:background="@drawable/bg_shuibo" >

        <TextView
            style="@style/bg_ww"
            android:gravity="right"
            android:paddingRight="@dimen/margin_right"
            android:text="分类"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_edit_classify"
            style="@style/bg_1w"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </TableRow>

    <View style="@style/view_line_1px" />

    <TableRow
        android:id="@+id/trb_variety"
        style="@style/bg_fw_all"
        android:background="@drawable/bg_shuibo" >

        <TextView
            style="@style/bg_ww"
            android:gravity="right"
            android:paddingRight="@dimen/margin_right"
            android:text="品牌"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_edit_variety"
            style="@style/bg_1w"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </TableRow>

    <View style="@style/view_line_1px" />

    <TableRow
        android:id="@+id/trb_place"
        style="@style/bg_fw_all"
        android:background="@drawable/bg_shuibo" >

        <TextView
            style="@style/bg_ww"
            android:gravity="right"
            android:paddingRight="@dimen/margin_right"
            android:text="产地"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_edit_place"
            style="@style/bg_1w"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </TableRow>

    <View style="@style/view_line_1px" />

    <TableRow
        style="@style/bg_fw"
        android:padding="@dimen/margin_left" >

        <TextView
            android:id="@+id/weight"
            style="@style/bg_ww"
            android:gravity="right"
            android:paddingRight="@dimen/margin_right"
            android:text="数量"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <EditText
            android:id="@+id/et_edit_weight"
            style="@style/sty_edit_text"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/edittext_select"
            android:hint="最大值为9999999"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            style="@style/bg_ww"
            android:text="吨"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </TableRow>

    <View style="@style/view_line_1px" />

    <TableRow
        android:id="@+id/trb_price_range"
        style="@style/bg_fw"
        android:padding="@dimen/margin_left" >

        <TextView
            android:id="@+id/price"
            style="@style/bg_ww"
            android:gravity="right"
            android:paddingRight="@dimen/margin_right"
            android:text="价格"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <EditText
            android:id="@+id/tv_edit_price_range"
            style="@style/sty_edit_text"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/edittext_select"
            android:hint="最大值为99999.99"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <TextView
            style="@style/bg_ww"
            android:text="元/吨"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </TableRow>

    <View style="@style/view_line_1px" />

    <TableRow
        android:id="@+id/trb_price_pre"
        style="@style/bg_fw"
        android:padding="@dimen/margin_left" >

        <TextView
            android:id="@+id/prepayment"
            style="@style/bg_ww"
            android:gravity="right"
            android:paddingRight="@dimen/margin_right"
            android:text="预付金额"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <EditText
            android:id="@+id/tv_edit_price_pre"
            style="@style/sty_edit_text"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/edittext_select"
            android:hint="最大值为9999999.99"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <TextView
            style="@style/bg_ww"
            android:text="元"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </TableRow>

    <TableLayout
        android:id="@+id/lin_is_show"
        android:orientation="vertical" >

        <View style="@style/view_line_1px" />

        <TableRow
            android:id="@+id/trb_pub_time"
            style="@style/bg_fw_all"
            android:background="@drawable/bg_shuibo" >

            <TextView
                android:id="@+id/put_time"
                style="@style/bg_ww"
                android:gravity="right"
                android:paddingRight="@dimen/margin_right"
                android:text="发布时间"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_edit_pub_time"
                style="@style/bg_1w"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="end"
                android:text="请选择"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            android:id="@+id/trb_end_time"
            style="@style/bg_fw_all"
            android:background="@drawable/bg_shuibo" >

            <TextView
                android:id="@+id/end_time"
                style="@style/bg_ww"
                android:gravity="right"
                android:paddingRight="@dimen/margin_right"
                android:text="结束时间"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_edit_end_time"
                style="@style/bg_1w"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="end"
                android:text="请选择"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            android:id="@+id/trb_auto_start"
            style="@style/bg_fw_all"
            android:background="@drawable/bg_shuibo" >

            <TextView
                android:id="@+id/auto_start"
                style="@style/bg_ww"
                android:gravity="right"
                android:paddingRight="@dimen/margin_right"
                android:text="自动开始"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_edit_auto_start"
                style="@style/bg_1w"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="end"
                android:text="请选择"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            android:id="@+id/trb_auto_end"
            style="@style/bg_fw_all"
            android:background="@drawable/bg_shuibo" >

            <TextView
                android:id="@+id/auto_end"
                style="@style/bg_ww"
                android:gravity="right"
                android:paddingRight="@dimen/margin_right"
                android:text="自动结束"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_edit_auto_end"
                style="@style/bg_1w"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="end"
                android:text="请选择"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>
    </TableLayout>

    <View style="@style/view_line_1px" />

    <TableRow
        android:id="@+id/trb_delivery_di"
        style="@style/bg_fw_all"
        android:background="@drawable/bg_shuibo" >

        <TextView
            android:id="@+id/delivery"
            style="@style/bg_ww"
            android:gravity="right"
            android:paddingRight="@dimen/margin_right"
            android:text="交割地"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_edit_delivery_di"
            style="@style/bg_1w"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="end"
            android:text="请选择"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </TableRow>

    <View style="@style/view_line_1px" />

    <TableRow style="@style/bg_fw_all" >

        <TextView
            style="@style/bg_ww"
            android:gravity="right"
            android:paddingRight="@dimen/margin_right"
            android:text="详细内容"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <EditText
            android:id="@+id/et_edit_need"
            style="@style/bg_1w"
            android:background="@drawable/edittext_select"
            android:gravity="top"
            android:hint="请输入需求"
            android:maxLength="500"
            android:lineSpacingExtra="8dp"
            android:minLines="4"
            android:padding="5dp"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </TableRow>

    <View style="@style/view_line_1px" />

</TableLayout>