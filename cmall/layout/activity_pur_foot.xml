<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_shou_ye"
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <View
        android:id="@+id/view_line"
        style="@style/view_line_15dp" />

    <TextView
        android:id="@+id/btn_sure_purchase_order"
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_bottom_10"
        android:layout_marginRight="@dimen/margin_bottom_10"
        android:layout_marginTop="@dimen/margin_bottom_15"
        android:background="@drawable/submit_select_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_bottom_10"
        android:text="确认采购意向单"
        android:textColor="@color/word_croci_white"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/btn_cancel_purchase_order"
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_bottom_10"
        android:layout_marginRight="@dimen/margin_bottom_10"
        android:layout_marginTop="@dimen/margin_bottom_15"
        android:background="@drawable/cancel_select_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_bottom_10"
        android:text="取消采购意向单"
        android:textColor="@color/word_blue_white"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/btn_commit_purchase_order"
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_bottom_10"
        android:layout_marginRight="@dimen/margin_bottom_10"
        android:layout_marginTop="@dimen/margin_top_15"
        android:background="@drawable/xiadan_select_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_bottom_10"
        android:text="下单"
        android:textColor="@color/word_white_croci"
        android:textSize="@dimen/text_size_16" />

    <View
        android:id="@+id/view_black"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

</LinearLayout>