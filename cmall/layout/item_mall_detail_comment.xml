<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginTop="@dimen/margin_top_15"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/bg_fw"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_mall_detail_comment_head"
                style="@style/img_mall_detail_comment_header"
                android:layout_marginLeft="@dimen/margin_left" />

            <TextView
                android:id="@+id/txt_mall_detail_comment_name"
                style="@style/bg_ww"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_left"
                android:textColor="@color/bg_black"
                android:text="S****S"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_mall_detail_comment_time"
            style="@style/bg_ww"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_right"
            android:text="2016-03-02 15:22:33"
                android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <View
        style="@style/view_line_1px"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right" />

    <RatingBar
        android:id="@+id/rating_mall_detail_comment"
        style="@style/ratingstyle"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top_15"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5" />

    <TextView
        android:id="@+id/txt_mall_detail_comment_content"
        style="@style/bg_fw"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top_15"
        android:textColor="@color/bg_black"
        android:text="但是看见啊大姐撒我IUui齐二药我去热与诶I为U人以为urewurfhuiewhfuiewhuiweh"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:id="@+id/mall_detail_comment_buytip_group"
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:orientation="vertical" >
    </LinearLayout>

    <View style="@style/view_line_1px" />

    <View style="@style/view_line_15dp" />

</LinearLayout>