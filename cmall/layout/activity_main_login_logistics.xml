<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_main_cotrol"
        style="@style/bg_fw"
        android:background="@drawable/bg_shuibo"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_bottom_15"
        android:paddingTop="@dimen/margin_top_15" >

        <ImageView
            android:id="@+id/img_main_icon"
            style="@style/bg_ww"
            android:paddingLeft="@dimen/margin_left"
            android:src="@drawable/supply" />

        <TextView
            android:id="@+id/txt_main_title"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="一级标题"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />

        <TextView
             android:visibility="invisible"
            android:id="@+id/txt_main_number"
            style="@style/bg_1w"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="@string/main_title_num"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/img_up_down_arrow"
            style="@style/bg_ww"
            android:layout_marginRight="@dimen/margin_right"
            android:src="@drawable/down_arrow" />
    </LinearLayout>

    <View style="@style/view_line_1dp" />

    <LinearLayout
        android:id="@+id/ll_sub_all_title_01"
        style="@style/bg_fw"
        android:background="@drawable/bg_shuibo"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_first_sub_item"
            style="@style/bg_fw"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/bg_shuibo"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_bottom_15"
            android:paddingTop="@dimen/margin_top_15" >

            <TextView
                android:id="@+id/txt_first_sub_title"
                style="@style/bg_ww"
                android:layout_marginLeft="@dimen/margin_left_30"
                android:text="子条目 1"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/txt_first_sub_number"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="@string/main_title_num"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

        <View
            style="@style/view_line_1px"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right" />

        <LinearLayout
            android:id="@+id/ll_seconed_sub_item"
            style="@style/bg_fw"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/bg_shuibo"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_bottom_15"
            android:paddingTop="@dimen/margin_top_15" >

            <TextView
                android:id="@+id/txt_seconed_sub_title"
                style="@style/bg_ww"
                android:layout_marginLeft="@dimen/margin_left_30"
                android:text="子条目 2"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/txt_seconed_sub_number"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="@string/main_title_num"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            style="@style/view_line_1px" />

        <LinearLayout
            android:id="@+id/ll_third_sub_item"
            style="@style/bg_fw"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/bg_shuibo"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_bottom_15"
            android:paddingTop="@dimen/margin_top_15"
            >

            <TextView
                android:id="@+id/txt_third_sub_title"
                style="@style/bg_ww"
                android:layout_marginLeft="@dimen/margin_left_30"
                android:text="子条目 3"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/txt_third_sub_number"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="@string/main_title_num"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>