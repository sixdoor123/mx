<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_top_10" >


        <TextView
            android:id="@+id/standard_name"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="right|center_vertical"
            android:text="名称"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <EditText
            android:id="@+id/edt_standard"
            style="@style/sty_edit_text"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_left"
            android:background="@drawable/edittext_select"
            android:hint="请输入"
            android:singleLine="true"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
        
        <TextView 
            android:id="@+id/txt_unit"
            style="@style/bg_ww"
            android:text="1212152"
            android:layout_marginRight="@dimen/margin_right"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15"/>
    </TableRow>

