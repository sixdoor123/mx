<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/bg_white" >

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_left"
        android:src="@drawable/img_feed_system" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_top_15"
        android:paddingRight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_right"
            android:background="@drawable/bg_help_system"
            android:textColor="@color/word_313131"
            android:textSize="@dimen/text_size_16"
            android:text="欢迎反馈" />

         <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_left"
            android:textColor="@color/word_313131"
            android:textSize="@dimen/text_size_14"
            android:text="时间" />
    </LinearLayout>


</LinearLayout>
