<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_ff"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_control"
            style="@style/bg_fw"
            android:background="@drawable/bg_shuibo"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_bottom_15"
            android:paddingTop="@dimen/margin_top_15" >

            <ImageView
                style="@style/bg_ww"
                android:layout_marginLeft="@dimen/margin_left"
                android:src="@drawable/supply" />

            <TextView
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="供应信息"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/img_up_down_arraw"
                style="@style/bg_ww"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

        <View style="@style/view_line_1px" />

        <LinearLayout
            android:id="@+id/ll_control_information"
            style="@style/bg_ff"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="供应商:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_merchant"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="名称 :"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_name"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="状态:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_state"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="分类:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_type"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="品牌:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_privoder_coal_type"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="产地 :"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_place"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="库存 :"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_invetory"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="价格:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_price"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="交割地 :"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_delivery"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="预付金额 :"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_payment"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="发布时间:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_put_time"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="结束时间:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_end_time"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="发布状态:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_public_state"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_remark"
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_15"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="备注:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_provider_remark"
                    style="@style/bg_ww"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.baiyi.cmall.views.MyLoadingBar
        android:id="@+id/load"
        style="@style/bg_fw"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>