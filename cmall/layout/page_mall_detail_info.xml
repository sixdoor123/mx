<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollview"
        style="@style/bg_ff" >

        <LinearLayout
            style="@style/bg_ff"
         
            android:orientation="vertical" >

            <cn.lightsky.infiniteindicator.InfiniteIndicatorLayout
                android:id="@+id/infinite_anim_circle"
                style="@style/img_mall_detail_conver" />

            <ImageView
                android:id="@+id/img_no_pic"
                style="@style/img_mall_detail_conver"
                android:background="@drawable/img_test_mall_detail"
                android:visibility="gone" />

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_10"
                android:layout_marginTop="@dimen/margin_top_10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_info_specifications"
                    style="@style/bg_fw"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/txt_price"
                    style="@style/bg_fw"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginTop="@dimen/margin_top_10"
                    android:text="￥ 0.00"
                    android:textColor="@color/bg_buyer"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <View style="@style/view_line_1px" />

            <LinearLayout
                android:id="@+id/btn_shopcar_dictionary"
                style="@style/bg_fw_all"
                android:background="@drawable/selector_pop_item"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_gravity="center_vertical"
                    android:text="已选"
                    android:textColor="@color/word_737373"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/select_dictionary"
                    style="@style/bg_1w"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:text=""
                    android:textColor="@color/word_ff6633"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    style="@style/img_arrow_right"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <View style="@style/view_line_1px" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_mall_tip" />

            <View
                style="@style/view_line_1px"
                android:layout_marginTop="@dimen/margin_top_10" />

            <View style="@style/view_line_15dp" />

            <View style="@style/view_line_1px" />

            <LinearLayout
                style="@style/bg_fw_all"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_mall_shop"
                    style="@style/img_mall_shop_conver"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/img_test_mall_detail_shop" />

                <LinearLayout
                    style="@style/bg_1w"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/mall_shop_name"
                        style="@style/bg_fw"
                        android:singleLine="true"
                        android:textColor="@color/bg_black"
                        android:textSize="@dimen/text_size_17" />

                    <TextView
                        android:id="@+id/mall_shop_info"
                        style="@style/bg_fw"
                        android:singleLine="true"
                        android:textColor="@color/bg_hui1"
                        android:textSize="@dimen/text_size_17" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:orientation="horizontal" >

                <LinearLayout
                    style="@style/bg_fw"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_bottom_5"
                    android:paddingTop="@dimen/margin_top_5" >

                    <TextView
                        android:id="@+id/mall_shop_follow"
                        style="@style/bg_ww"
                        android:duplicateParentState="true"
                        android:text="0"
                        android:textColor="@color/bg_buyer"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        style="@style/bg_ww"
                        android:layout_marginTop="@dimen/margin_top_5"
                        android:duplicateParentState="true"
                        android:text="关注人数"
                        android:textColor="@color/bg_hui1"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/bg_hui1" />

                <LinearLayout
                    style="@style/bg_fw"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_bottom_5"
                    android:paddingTop="@dimen/margin_top_5" >

                    <TextView
                        android:id="@+id/mall_shop_pronum"
                        style="@style/bg_ww"
                        android:duplicateParentState="true"
                        android:text="0"
                        android:textColor="@color/bg_buyer"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        style="@style/bg_ww"
                        android:layout_marginTop="@dimen/margin_top_5"
                        android:duplicateParentState="true"
                        android:text="全部商品"
                        android:textColor="@color/bg_hui1"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/bg_hui1" />

                <LinearLayout
                    style="@style/bg_fw"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_bottom_5"
                    android:paddingTop="@dimen/margin_top_5" >

                    <TextView
                        android:id="@+id/mall_shop_commentnum"
                        style="@style/bg_ww"
                        android:duplicateParentState="true"
                        android:text="0"
                        android:textColor="@color/bg_buyer"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        style="@style/bg_ww"
                        android:layout_marginTop="@dimen/margin_top_5"
                        android:duplicateParentState="true"
                        android:text="全部评论"
                        android:textColor="@color/bg_hui1"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_20"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top_20"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/btn_collect"
                    style="@style/bg_fw"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_collect"
                        style="@style/bg_ww"
                        android:background="@drawable/submit_select_bg"
                        android:drawableLeft="@drawable/user_follow"
                        android:drawablePadding="@dimen/margin_left"
                        android:duplicateParentState="true"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="10dp"
                        android:text=" 加入关注"
                        android:textColor="@color/word_croci_white"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_shop"
                    style="@style/bg_fw"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bg_ww"
                        android:background="@drawable/cancel_select_bg"
                        android:drawableLeft="@drawable/quotation"
                        android:drawablePadding="@dimen/margin_5"
                        android:duplicateParentState="true"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="10dp"
                        android:text=" 进入店铺"
                        android:textColor="@color/word_blue_white"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/view_line_1px" />

            <View style="@style/view_line_15dp" />

            <View style="@style/view_line_1px" />

            <LinearLayout
                android:id="@+id/txt_pic_file_detail"
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_10"
                android:layout_marginTop="@dimen/margin_top_10"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView 
                    android:id="@+id/img_up_down"
                    style="@style/bg_ww"
                     android:background="@drawable/up_arrow"/>
                <TextView
                    android:id="@+id/txt_content"
                    style="@style/bg_ww"
                    android:layout_marginLeft="5dp"
                    android:duplicateParentState="true"
                    android:text="上拉查看图文详情"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/activity_pic_file_detail" />

</LinearLayout>