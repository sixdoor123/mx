<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_pro"
        style="@style/img_mall_detail_comment_header"
        android:layout_marginLeft="@dimen/margin_left" />

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/order_pro_name"
            style="@style/bg_fw"
            android:textColor="@color/word_313131"
            android:singleLine="true"
            android:text="name"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/order_shop_name"
            style="@style/bg_fw"
            android:textColor="@color/word_737373"
            android:singleLine="true"
            android:text="商家"
            android:paddingTop="@dimen/margin_5"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/order_sp_name"
            style="@style/bg_fw"
            android:textColor="@color/word_737373"
            android:singleLine="true"
            android:text="规格:1111111\n22222222\n33333333"
            android:paddingTop="@dimen/margin_5"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/order_num"
            style="@style/bg_fw"
            android:textColor="@color/word_737373"
            android:singleLine="true"
            android:text="数量"
            android:paddingTop="@dimen/margin_5"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/order_unprice"
            style="@style/bg_fw"
            android:textColor="@color/word_737373"
            android:singleLine="true"
            android:text="单价"
            android:paddingTop="@dimen/margin_5"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</LinearLayout>