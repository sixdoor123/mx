<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_top_10"
    android:paddingBottom="@dimen/margin_bottom_15" >

    <TextView
        android:id="@+id/txt_sub_category"
        style="@style/bg_1w"
        android:layout_marginLeft="@dimen/margin_left"
        android:lines="1"
        android:text="分类"
        android:textColor="@color/bg_hui1"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/txt_sub_weight"
        style="@style/bg_1w"
        android:layout_marginLeft="@dimen/margin_left"
        android:lines="1"
        android:text="数量"
        android:textColor="@color/bg_hui1"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/txt_sub_price_range"
        style="@style/bg_1w"
        android:layout_marginLeft="@dimen/margin_left"
        android:lines="1"
        android:text="价格区间"
        android:textColor="@color/bg_hui1"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/txt_sub_area"
        style="@style/bg_1w"
        android:layout_marginLeft="@dimen/margin_left"
        android:lines="1"
        android:text="地区"
        android:textColor="@color/bg_hui1"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/txt_sub_put_time"
        style="@style/bg_1w"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:lines="1"
        android:text="发布时间"
        android:textColor="@color/bg_hui1"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>