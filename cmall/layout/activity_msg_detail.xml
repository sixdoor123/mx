<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_bottom_15"
        android:paddingTop="@dimen/margin_top_15" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:singleLine="true"
            android:text="来源"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left_20"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="点城网"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_right"
            android:singleLine="true"
            android:text="2015-04-18 15:20"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

    <View style="@style/view_line_15dp" />

    <View style="@style/view_line_1px" />

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_bottom_15"
        android:paddingTop="@dimen/margin_top_15" >

        <TextView
            android:id="@+id/news_coupon_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:singleLine="true"
            android:text="点城网"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

    <TextView
        android:id="@+id/news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginTop="@dimen/margin_top_15"
        android:lineSpacingExtra="@dimen/margin_line_top_5"
        android:paddingLeft="@dimen/margin_left"
        android:paddingRight="@dimen/margin_right"
        android:text="的呼声骄傲地的睡觉全：666332233，觉得还睡觉啊黄的睡觉奥会的呼声金卡还得健身卡哈的健身卡 当升科技阿红的刷卡好"
        android:textColor="@color/bg_hui1"
        android:textSize="@dimen/text_size_16" />

    <View style="@style/view_line_1px" />

</LinearLayout>