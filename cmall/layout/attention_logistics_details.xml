<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/com_logo"
        style="@style/bg_ww"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/news_loading"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_no_logo"
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_top_25"
        android:layout_marginTop="@dimen/margin_top_25"
        android:gravity="center"
        android:text="暂无图片" />

    <LinearLayout
        android:id="@+id/lin_pro_control"
        style="@style/bg_fw"
        android:background="@drawable/bg_shuibo"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_bottom_15"
        android:paddingTop="@dimen/margin_top_15" >

        <ImageView
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/supply" />

        <TextView
            style="@style/bg_1w"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="供应信息"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tab_pro_detail"
        style="@style/bg_fw"
        android:orientation="vertical" >
    </TableLayout>

    <View
        style="@style/view_line_15dp"
        android:visibility="gone" />

</LinearLayout>