<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <View style="@style/view_line_15dp" />

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginTop="@dimen/margin_top_15"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/supply" />

        <TextView
            android:id="@+id/txt_provider_info"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="供应信息"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

</LinearLayout>