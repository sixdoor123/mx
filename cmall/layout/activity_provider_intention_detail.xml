<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_ff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_control"
            style="@style/bg_fw_all"
            android:background="@drawable/bg_shuibo" >

            <ImageView
                style="@style/bg_ww"
                android:src="@drawable/supply" />

            <TextView
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="供应信息"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/img_right_pro"
                style="@style/bg_ww"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

        <View style="@style/view_line_1px" />

        <TableLayout
            style="@style/bg_fw"
            android:collapseColumns="3" >

            <TableRow style="@style/bg_fw_all" >

                <TextView
                    style="@style/bg_ww"
                    android:gravity="right"
                    android:text="名称"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/edt_goods_provider_name"
                    style="@style/bg_fw"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:singleLine="true"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </TableRow>

            <View style="@style/view_line_1px" />

            <TableRow
                android:id="@+id/ll_provider_categatory"
                style="@style/bg_fw_all"
                android:background="@drawable/bg_shuibo" >

                <TextView
                    style="@style/bg_ww"
                    android:gravity="right"
                    android:text="分类"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_category"
                    style="@style/bg_1w"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="请选择"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </TableRow>

            <View style="@style/view_line_1px" />

            <TableRow
                android:id="@+id/ll_provider_coal_type"
                style="@style/bg_fw_all"
                android:background="@drawable/bg_shuibo" >

                <TextView
                    style="@style/bg_ww"
                    android:gravity="right"
                    android:text="品牌"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_coal_type"
                    style="@style/bg_1w"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="请选择"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </TableRow>

            <View style="@style/view_line_1px" />

            <TableRow
                android:id="@+id/ll_provider_place"
                style="@style/bg_fw_all"
                android:background="@drawable/bg_shuibo" >

                <TextView
                    style="@style/bg_ww"
                    android:gravity="right"
                    android:text="产地"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_place"
                    style="@style/bg_1w"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="请选择"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </TableRow>

            <View style="@style/view_line_1px" />

            <TableRow style="@style/bg_fw_all" >

                <TextView
                    style="@style/bg_ww"
                    android:gravity="right"
                    android:text="库存"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/edt_goods_provider_weight"
                    style="@style/bg_fw"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:singleLine="true"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </TableRow>

            <View style="@style/view_line_1px" />

            <TableRow style="@style/bg_fw_all" >

                <TextView
                    style="@style/bg_ww"
                    android:gravity="right"
                    android:text="价格"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/edt_goods_provider_price"
                    style="@style/bg_fw"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:singleLine="true"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </TableRow>

            <View style="@style/view_line_1px" />

            <TableRow style="@style/bg_fw_all" >

                <TextView
                    style="@style/bg_ww"
                    android:gravity="right"
                    android:text="预付金额"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/edt_goods_provider_prepayment"
                    style="@style/bg_fw"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:singleLine="true"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </TableRow>

            <View style="@style/view_line_1px" />

            <TableRow
                android:id="@+id/ll_provider_delivery"
                style="@style/bg_fw_all"
                android:background="@drawable/bg_shuibo" >

                <TextView
                    style="@style/bg_ww"
                    android:gravity="right"
                    android:text="交割地"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_delivery"
                    style="@style/bg_1w"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="请选择"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </TableRow>

            <View style="@style/view_line_1px" />

            <TableRow
                android:id="@+id/ll_provider_price_range"
                style="@style/bg_fw_all"
                android:background="@drawable/bg_shuibo" >

                <TextView
                    style="@style/bg_ww"
                    android:text="详细信息"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_pro_details"
                    style="@style/bg_1w"
                     android:textColor="@color/bg_hui1"
                   android:textSize="@dimen/text_size_15"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="详细信息详细信息详细信息详细信息详细信息详细信息详细信息详细信息详细信息" />
            </TableRow>

            <View style="@style/view_line_1px" />
        </TableLayout>
    </LinearLayout>

    <com.baiyi.cmall.views.MyLoadingBar
        android:id="@+id/_load"
        style="@style/bg_fw"
        android:layout_gravity="center"
        android:visibility="gone" >
    </com.baiyi.cmall.views.MyLoadingBar>

</FrameLayout>