<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_ff" >
<LinearLayout
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <TableLayout
        style="@style/bg_fw"
        android:collapseColumns="2" >

        <TableRow
            style="@style/bg_fw_all">

            <TextView
                style="@style/bg_ww"
                android:gravity="right"
                android:text="供应商:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_detail_merchant"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:layout_marginRight="@dimen/margin_right"
                android:singleLine="true"
                android:text="山西延安无烟煤"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_16" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginLeft="@dimen/margin_left"
                android:gravity="right"
                android:text="名称:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_provider_name"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:text="名称"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />
        <TableRow
            style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginLeft="@dimen/margin_left"
                android:gravity="right"
                android:text="分类:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_detail_category"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:text="分类"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            style="@style/bg_fw_all">

            <TextView
                style="@style/bg_ww"
                android:gravity="right"
                android:text="品牌:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_detail_breed"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:text="品种"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:gravity="right"
                android:text="产地:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_detail_area"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:text="产地"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        

        <View style="@style/view_line_1px" />

        <TableRow
            style="@style/bg_fw_all">

            <TextView
                style="@style/bg_ww"
                android:gravity="right"
                android:text="库存:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_detail_weight_01"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:text="库存"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            style="@style/bg_fw_all">

            <TextView
                style="@style/bg_ww"
                android:gravity="right"
                android:text="交割地:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_detail_delivery"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:text="交割地"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />
        <TableRow
            style="@style/bg_fw_all">

            <TextView
                style="@style/bg_ww"
                android:gravity="right"
                android:text="价格:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_detail_price"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:text="价格"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            style="@style/bg_fw_all">

            <TextView
                style="@style/bg_ww"
                android:gravity="right"
                android:text="预付金额:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_detail_put_time"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:text="预付金额"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            style="@style/bg_fw_all">

            <TextView
                style="@style/bg_ww"
                android:gravity="right"
                android:text="发布时间:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_detail_price_range"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_top_10"
                android:text="价格区间"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow
            style="@style/bg_fw_all">

            <TextView
                style="@style/bg_ww"
                android:gravity="right"
                android:text="详细内容:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_detail_price_way"
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="详细内容"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

       
    </TableLayout>

    <View style="@style/view_line_1px" />


</LinearLayout>
<com.baiyi.cmall.views.MyLoadingBar 
    style="@style/bg_ww"
    android:visibility="gone"
    android:layout_gravity="center"
    android:id="@+id/load"/>
</FrameLayout>