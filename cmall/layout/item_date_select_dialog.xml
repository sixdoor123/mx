<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_date_title"
        style="@style/bg_fw"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_top_20"
        android:paddingTop="@dimen/margin_top_20"
        android:text="选择始发日期"
        android:textColor="@color/word_ff6633"
        android:textSize="@dimen/text_size_16" />

    <View style="@style/view_line_2px" />

    <DatePicker
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:calendarViewShown="false" />

    <View style="@style/view_line_2px" />

    <LinearLayout
        style="@style/bg_fw"
        android:paddingBottom="@dimen/margin_dialog_bottom_8"
        android:paddingTop="@dimen/margin_top_10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/btn_canel"
            style="@style/btn_dialog_nologin_cancel"
            android:text="取消" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/btn_dialog_nologin_cancel"
            android:text="确定" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>

</LinearLayout>