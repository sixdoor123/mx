<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/margin_left_30"
    android:paddingBottom="@dimen/margin_bottom_10"
    android:background="@color/bg_green" >

    <ImageView
        android:id="@+id/img_search"
        style="@style/bg_ww_all"
        android:background="@drawable/bg_white_hui3"
        android:src="@drawable/ic_search"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_app"
        style="@style/bg_ww"
        android:layout_marginLeft="@dimen/margin_left"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_hui3"
        android:src="@drawable/app_logo"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="@dimen/margin_right"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
         android:layout_marginLeft="@dimen/margin_left"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="输入关键字搜索"
        android:textColor="@color/bg_hui2"
        android:textSize="@dimen/text_size_15" />

    <ImageView
        android:id="@+id/btn_more"
        style="@style/bg_ww"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_left"
        android:background="@drawable/bg_white_hui3"
        android:paddingRight="5dp"
        android:src="@drawable/icon_more2x" />

</LinearLayout>