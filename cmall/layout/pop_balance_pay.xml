<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white" >

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/bg_fw"
            android:background="@drawable/bg_shuibo"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_delete_pop"
                style="@style/bg_ww_all"
                android:background="@drawable/bg_shuibo"
                android:src="@drawable/icon_delete" />

            <TextView
                style="@style/bg_1w"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="付款详情"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                style="@style/bg_ww_all"
                android:background="@drawable/bg_shuibo"
                android:src="@drawable/icon_doubt" />
        </LinearLayout>

        <View style="@style/view_line_1px" />

        <LinearLayout
            style="@style/bg_fw_all"
            android:background="@drawable/bg_shuibo"
            android:orientation="horizontal" >

            <TextView
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:gravity="left"
                android:text="付款方式"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_16" />

            <TextView
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:gravity="right"
                android:text="余额支付"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <View style="@style/view_line_1px" />

        <LinearLayout
            style="@style/bg_fw_all"
            android:background="@drawable/bg_shuibo"
            android:orientation="horizontal" >

            <TextView
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:gravity="left"
                android:text="账户余额"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_16" />

            <TextView
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:gravity="right"
                android:text="xxx.xx元"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <View style="@style/view_line_1px" />

        <LinearLayout
            style="@style/bg_fw_all"
            android:background="@drawable/bg_shuibo"
            android:orientation="horizontal" >

            <TextView
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:gravity="left"
                android:text="需付款"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_16" />

            <TextView
                style="@style/bg_1w"
                android:layout_marginLeft="@dimen/margin_left"
                android:gravity="right"
                android:text="xxx.xx元"
                android:textColor="@color/bg_buyer"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <View style="@style/view_line_1px" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_pay_ok"
        style="@style/bg_fw"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top_15"
        android:background="@drawable/submit_select_bg"
        android:gravity="center"
        android:padding="@dimen/margin_bottom_10"
        android:text="确认付款"
        android:textColor="@color/word_croci_white"
        android:textSize="@dimen/text_size_15" />

</RelativeLayout>