<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_hui3"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_bottom_15"
    android:paddingTop="@dimen/margin_top_15" >

    <TextView
        android:id="@+id/txt_seconed_name"
        style="@style/bg_1w"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_left"
        android:text="分类"
        android:textColor="@color/bg_black"
        android:textSize="@dimen/text_size_15" />

    <ImageView
        android:id="@+id/img_select"
        style="@style/bg_ww"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right_20"
        android:src="@drawable/selected_red" />

</LinearLayout>