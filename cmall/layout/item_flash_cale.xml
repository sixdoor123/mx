<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:background="@drawable/bg_shuibo"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_bottom_15" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:singleLine="true"
            android:text="XXX"
            android:textColor="@color/bg_buyer"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:singleLine="true"
            android:text="XXX"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_bottom_15"
        android:paddingTop="@dimen/margin_top_10" >

        <TextView
            android:id="@+id/tv_company"
            style="@style/bg_1w"
            android:layout_marginLeft="@dimen/margin_left"
            android:singleLine="true"
            android:text="XXXXXXXXXXXXXXX"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_city"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:singleLine="true"
            android:text="XXX"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:layout_marginRight="@dimen/margin_right"
            android:singleLine="true"
            android:text="XXX"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

</LinearLayout>