<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/bg_1w"
            android:background="@drawable/bg_shuibo"
            android:id="@+id/intention_order"
            android:layout_marginRight="1px"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/intention"
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_15"
                android:layout_marginTop="@dimen/margin_top_15"
                android:gravity="center"
                android:text="意向订单"
                
                android:textColor="@color/bg_buyer"
                android:textSize="@dimen/text_size_16" />

            <View
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg_buyer" />
        </LinearLayout>

        <LinearLayout
             android:background="@drawable/bg_shuibo"
            android:id="@+id/product_order"
            style="@style/bg_1w"
            android:layout_marginLeft="1px"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/product"
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_15"
                android:layout_marginTop="@dimen/margin_top_15"
                android:gravity="center"
                android:text="产品订单"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_16" />

            <View
                 android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg_white" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/view_line_1dp" />

</LinearLayout>