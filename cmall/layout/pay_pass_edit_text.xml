<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_fw"
        android:background="@drawable/bg_shuibo"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_delete_pop"
            style="@style/bg_ww_all"
            android:background="@drawable/bg_shuibo"
            android:src="@drawable/icon_delete" />

        <TextView
            style="@style/bg_1w"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="输入密码"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            style="@style/bg_ww_all"
            android:background="@drawable/bg_shuibo"
            android:src="@drawable/icon_doubt" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

    <com.baiyi.cmall.activities.user.buyer.form.PayPasswordEditText
        android:id="@+id/tv_pay_pass"
        style="@style/bg_fw_all" >
    </com.baiyi.cmall.activities.user.buyer.form.PayPasswordEditText>

</LinearLayout>