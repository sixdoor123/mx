<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shuibo"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_fw_all"
        android:orientation="horizontal" >

        <ImageView
            style="@style/bg_ww"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/app_icon" />

        <LinearLayout
            style="@style/bg_fw"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_good_name"
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_10"
                android:layout_marginRight="@dimen/margin_right"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginRight="@dimen/margin_right"
                    android:text="规格:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_guige"
                    style="@style/bg_ww"
                    android:singleLine="true"
                    android:text="---"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginRight="@dimen/margin_right"
                    android:text="数量:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_weight"
                    style="@style/bg_ww"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginRight="@dimen/margin_right"
                    android:text="单价:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/bg_ww"
                    android:text=""
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_fw"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bg_ww"
                    android:layout_marginRight="@dimen/margin_right"
                    android:text="总金额:"
                    android:textColor="@color/bg_hui1"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_all_price"
                    style="@style/bg_ww"
                    android:text=""
                    android:textColor="@color/bg_buyer"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/view_line_1px" />

</LinearLayout>