<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_green"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_top_20" >

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_back"
            style="@style/bg_ww"
            android:background="@drawable/bg_shuibo"
            android:paddingBottom="@dimen/margin_bottom_15"
            android:paddingLeft="@dimen/margin_left"
            android:paddingRight="@dimen/margin_right"
            android:paddingTop="@dimen/margin_top_15"
            android:src="@drawable/ic_back" />

        <LinearLayout
            style="@style/bg_1w"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_first"
                style="@style/bg_ww"
                android:layout_marginRight="1px"
                android:background="@drawable/bg_shuibo"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_first"
                    style="@style/bg_ww"
                    android:layout_marginBottom="@dimen/margin_bottom_15"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginTop="@dimen/margin_top_15"
                    android:text="商品"
                    android:textColor="@color/bg_buyer"
                    android:textSize="@dimen/text_size_18" />

                <View
                    android:id="@+id/v_first"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_seconed"
                style="@style/bg_ww"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:background="@drawable/bg_shuibo"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_seconed"
                    style="@style/bg_ww"
                    android:layout_marginBottom="@dimen/margin_bottom_15"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginTop="@dimen/margin_top_15"
                    android:text="详情"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/text_size_18" />

                <View
                    android:id="@+id/v_seconed"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg_green" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_third"
                style="@style/bg_ww"
                android:layout_marginLeft="1px"
                android:background="@drawable/bg_shuibo"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_third"
                    style="@style/bg_ww"
                    android:layout_marginBottom="@dimen/margin_bottom_15"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginTop="@dimen/margin_top_15"
                    android:text="评论"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/text_size_18" />

                <View
                    android:id="@+id/v_third"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg_green" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_more"
            style="@style/bg_ww"
            android:background="@drawable/bg_shuibo"
            android:paddingBottom="@dimen/margin_bottom_15"
            android:paddingLeft="@dimen/margin_left"
            android:paddingRight="@dimen/margin_right"
            android:paddingTop="@dimen/margin_top_15"
            android:src="@drawable/icon_more2x" />
    </LinearLayout>

    <View style="@style/view_line_1dp" />

</LinearLayout>