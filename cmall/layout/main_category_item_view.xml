<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shuibo"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_bottom_15"
        android:paddingTop="@dimen/margin_top_15" >

        <ImageView
            android:id="@+id/img_category_pic"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/quotation" />

        <TextView
            android:id="@+id/txt_category_name"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="陕西百益化工"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/txt_oreder_state"
            style="@style/bg_1w"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_left"
            android:gravity="right"
            android:text="买家已收货"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <View style="@style/view_line_1dp" />

</LinearLayout>