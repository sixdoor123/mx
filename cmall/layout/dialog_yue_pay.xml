<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/bg_fw"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_bottom_15"
        android:paddingTop="@dimen/margin_top_15" >

        <ImageView
            style="@style/btn_back_x"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left" />

        <TextView
            style="@style/bg_ww"
            android:layout_centerInParent="true"
            android:text="付款详情"
            android:textColor="@color/word_313131"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            style="@style/img_doubt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_right" />
    </RelativeLayout>

    <View style="@style/view_line_1px" />

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="horizontal"
        android:padding="@dimen/margin_top_15" >

        <TextView
            style="@style/bg_fw"
            android:layout_weight="1"
            android:text="付款方式"
            android:textColor="@color/word_737373"
            android:textSize="@dimen/text_size_18" />

        <TextView
            style="@style/bg_ww"
            android:layout_centerInParent="true"
            android:text="余额支付"
            android:textColor="@color/word_737373"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="horizontal"
        android:padding="@dimen/margin_top_15" >

        <TextView
            style="@style/bg_fw"
            android:layout_weight="1"
            android:text="账号余额"
            android:textColor="@color/word_737373"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/txt_yue"
            style="@style/bg_ww"
            android:layout_centerInParent="true"
            android:text="555.00元"
            android:textColor="@color/word_737373"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="horizontal"
        android:padding="@dimen/margin_top_15" >

        <TextView
            style="@style/bg_fw"
            android:layout_weight="1"
            android:text="需付款"
            android:textColor="@color/word_313131"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/txt_price"
            style="@style/bg_ww"
            android:layout_centerInParent="true"
            android:text="12.99"
            android:textColor="@color/word_ff6633"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <View style="@style/view_line_15dp" />

    <View style="@style/view_line_15dp" />

    <View style="@style/view_line_15dp" />

    <Button
        android:id="@+id/btn_pay"
        style="@style/btn_pay_yue"
        android:layout_margin="@dimen/margin_top_15"
        android:gravity="center"
        android:text="确认支付"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>