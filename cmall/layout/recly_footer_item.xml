<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bg_fw"
    android:orientation="vertical" >

    <View
        style="@style/view_line_1px"
        android:background="@color/bg_line1_color" />

    <LinearLayout
        style="@style/bg_fw"
        android:layout_height="35dp"
        android:background="@color/bg_line1_color" >

        <RelativeLayout
            android:id="@+id/more_loading"
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <LinearLayout
                style="@style/bg_ww"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/foot_loading"
                    style="@style/bg_ww"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:id="@+id/foot_noload"
                    style="@style/bg_ww"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone" />
                <!--
                在 foot_noload 中
                android:src="@drawable/loading20"
                -->

                <TextView
                    android:id="@+id/more_text_end"
                    style="@style/bg_ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="正在加载中"
                    android:textColor="@color/dark_bg"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>