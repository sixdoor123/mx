<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:id="@+id/lin_zixun"
    android:background="@drawable/bg_shuibo"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_zixun"
        style="@style/bg_ww"
        android:src="@drawable/home_news" />

    <ImageView
        android:id="@+id/img_line"
        style="@style/bg_wf"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="@drawable/m_tab_bg" />

    <TextView
        android:id="@+id/tv_zixun_remen"
        style="@style/bg_ww"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_5"
        android:text="热门"
        android:textColor="@color/bg_red"
        android:textSize="@dimen/text_size_14" />

    <ViewFlipper
        android:id="@+id/vp_zi_xun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:flipInterval="5000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

</LinearLayout>