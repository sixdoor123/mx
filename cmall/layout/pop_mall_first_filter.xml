<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_first_layout"
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/pop_mall_filter_title" />

    <View style="@style/view_line_1px" />

    <View style="@style/view_line_15dp" />

    <View style="@style/view_line_1px" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/seconed_recycleview"
            style="@style/bg_fw" />

        <com.baiyi.cmall.views.MyLoadingBar
            android:id="@+id/load_bar"
            style="@style/bg_fw"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        style="@style/bg_ww"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_bottom_20"
        android:layout_marginTop="@dimen/margin_top_20"
        android:background="@drawable/button_mall"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/btn_clear"
            style="@style/bg_ff"
            android:layout_gravity="center"
            android:background="@drawable/bg_white_hui3"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_top_10"
            android:paddingLeft="@dimen/margin_left_15"
            android:paddingRight="@dimen/margin_left_15"
            android:paddingTop="@dimen/margin_top_10"
            android:text="清除选项"
            android:textColor="@color/word_hui1_croci"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>