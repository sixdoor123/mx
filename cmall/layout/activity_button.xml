<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_foot_button"
    style="@style/bg_fw"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <View
        android:id="@+id/view_line_15"
        style="@style/view_line_15dp" />

    <TextView
        android:id="@+id/btn_commit_modify"
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_bottom_10"
        android:layout_marginRight="@dimen/margin_bottom_10"
        android:layout_marginTop="@dimen/margin_bottom_15"
        android:background="@drawable/submit_select_bg"
        android:gravity="center"
        android:padding="@dimen/margin_bottom_10"
        android:text="提交委托供应"
        android:textColor="@color/word_croci_white"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/btn_cancel_modify"
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_bottom_10"
        android:layout_marginRight="@dimen/margin_bottom_10"
        android:layout_marginTop="@dimen/margin_bottom_10"
        android:background="@drawable/cancel_select_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_top_10"
        android:text="取消"
        android:textColor="@color/word_blue_white"
        android:textSize="@dimen/text_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/bg_white" />

</LinearLayout>