<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shuibo"
    android:orientation="vertical" >

    <LinearLayout style="@style/bg_fw_all" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_business" />

        <TextView
            android:id="@+id/tv_company"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:singleLine="true"
            android:text="陕西百益化工"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/tv_state_name"
            style="@style/bg_fw"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="end"
            android:singleLine="true"
            android:text="买家已收货"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

    <com.baiyi.cmall.activities.user.buyer.form.product_order.ProductOrderChildItem
        android:id="@+id/lay_product_parent"
        style="@style/bg_fw" />

    <TextView
        android:id="@+id/tv_all_money"
        style="@style/bg_fw_all"
        android:layout_marginLeft="@dimen/margin_left"
        android:singleLine="true"
        android:text="实付款: ￥ 246.00"
        android:textColor="@color/bg_black"
        android:textSize="@dimen/text_size_15" />

    <View style="@style/view_line_10dp" />

</LinearLayout>