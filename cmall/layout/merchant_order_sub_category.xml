<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/all_product"
            style="@style/bg_1w"
            android:layout_marginRight="1px"
            android:background="@drawable/bg_shuibo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/all"
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_15"
                android:layout_marginTop="@dimen/margin_top_15"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/bg_buyer"
                android:textSize="@dimen/text_size_16" />

            <View
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg_buyer" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirm_product"
            style="@style/bg_1w"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:background="@drawable/bg_shuibo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/confirm"
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_15"
                android:layout_marginTop="@dimen/margin_top_15"
                android:gravity="center"
                android:text="已确认"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_16" />

            <View
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/un_confirm_product"
            style="@style/bg_1w"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:background="@drawable/bg_shuibo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/un_confirm"
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_15"
                android:layout_marginTop="@dimen/margin_top_15"
                android:gravity="center"
                android:text="未确认"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_16" />

            <View
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/complete_product"
            style="@style/bg_1w"
            android:layout_marginLeft="1px"
            android:background="@drawable/bg_shuibo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/complete"
                style="@style/bg_fw"
                android:layout_marginBottom="@dimen/margin_bottom_15"
                android:layout_marginTop="@dimen/margin_top_15"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_16" />

            <View
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg_white" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/view_line_1dp" />

</LinearLayout>