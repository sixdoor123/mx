<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_shuibo"
    android:paddingBottom="@dimen/margin_bottom_15"
    android:paddingTop="@dimen/margin_top_15" >

    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:background="@drawable/icon_no" />

    <LinearLayout
        style="@style/bg_1w"
        android:layout_marginLeft="@dimen/margin_left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_product_name"
            style="@style/bg_ww"
            android:text="矢车菊素双葡萄苷"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/txt_cas"
            style="@style/bg_ww"
            android:layout_marginTop="@dimen/margin_top_10"
            android:text="(CAS号: 123-456-789)"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_product_state"
        style="@style/bg_ww"
        android:layout_marginLeft="@dimen/margin_top_10"
        android:layout_marginRight="@dimen/margin_top_10"
        android:layout_gravity="center_vertical"
        android:text="已发布"
        android:textColor="@color/bg_hui1"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>