<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="130dp"
    android:layout_height="150dp"
    android:background="@drawable/toast_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_icon"
        style="@style/bg_ww"
        android:layout_marginTop="@dimen/margin_top_15"
        android:src="@drawable/complete_1" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_left_15"
        android:layout_marginTop="@dimen/margin_top_15"
        android:gravity="center"
        android:text="恭喜您,商品已添加至购物车"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>