<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:background="@drawable/bg_shuibo"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_fw"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_top_10"
        android:layout_marginLeft="@dimen/margin_left"
        android:orientation="horizontal" >

        <TextView
            style="@style/bg_ww"
            android:singleLine="true"
            android:text="供应:"
            android:textColor="@color/word_ff6633"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/txt_business_shop_supply"
            style="@style/bg_fw"
            android:singleLine="true"
            android:text="欲出售1200吨产自陕西延安的烟煤."
            android:textColor="@color/word_737373"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_top_10" >

        <TextView
            android:id="@+id/txt_business_shop_category"
            style="@style/bg_1w"
            android:layout_marginLeft="@dimen/margin_bottom_15"
            android:singleLine="true"
            android:text="分类"
            android:textColor="@color/word_737373"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/txt_business_shop_num"
            style="@style/bg_1w"
            android:layout_marginLeft="@dimen/margin_bottom_15"
            android:singleLine="true"
            android:text="数量"
            android:gravity="center"
            android:textColor="@color/word_737373"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/txt_business_shop_minprice"
            style="@style/bg_1w"
            android:layout_marginLeft="@dimen/margin_bottom_15"
            android:layout_marginRight="@dimen/margin_right"
            android:singleLine="true"
            android:text="最低价￥-元"
            android:textColor="@color/word_737373"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

</LinearLayout>