<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_green"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_left_30"
        android:paddingTop="@dimen/margin_left_30" >

        <ImageView
            android:id="@+id/img_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_15"
            android:gravity="center"
            android:src="@drawable/login" />
    </LinearLayout>

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top_15"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/bg_ww"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <ImageView
                style="@style/bg_ww"
                android:src="@drawable/password" />

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginLeft="@dimen/margin_left"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/edt_code"
                    style="@style/bg_fw"
                    android:background="@null"
                    android:gravity="bottom|end|left"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="5dp"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_hui3"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/bg_hui3"
            android:gravity="center" />

        <LinearLayout
            style="@style/bg_ww"
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/re_send_code"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/count_time"
                style="@style/bg_fw"
                android:gravity="bottom|center"
                android:text="xxxxxxx"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_bottom_10"
                android:background="@color/bg_hui3"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_login"
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_bottom_10"
        android:layout_marginRight="@dimen/margin_bottom_10"
        android:layout_marginTop="@dimen/margin_top_15"
        android:background="@drawable/submit_select_bg"
        android:gravity="center"
        android:padding="@dimen/margin_bottom_10"
        android:text="登录"
        android:textColor="@color/word_croci_white"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_bottom_15"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView style="@style/bg_1w" />

        <TextView
            android:id="@+id/txt_account_login"
            style="@style/bg_ww"
            android:text="普通登录"
            android:textColor="@color/bg_buyer" />
    </LinearLayout>

</LinearLayout>