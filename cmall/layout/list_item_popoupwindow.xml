<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_fw"
        android:background="@color/bg_white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_selected"
            style="@style/bg_ww"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/pop_selector"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_item_sel"
            style="@style/bg_1w"
            android:layout_marginBottom="@dimen/margin_bottom_15"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_bottom_15"
            android:singleLine="true"
            android:text="@dimen/text_size_16"
            android:textColor="@color/word_black_red" />
    </LinearLayout>
<!-- <View style="@style/view_line_1dp" /> -->

</LinearLayout>