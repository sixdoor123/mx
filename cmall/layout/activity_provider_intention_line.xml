<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_ff"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_control"
        style="@style/bg_fw"
        android:background="@drawable/bg_shuibo"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_bottom_15"
        android:paddingTop="@dimen/margin_top_15" >

        <ImageView
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/supply" />

        <TextView
            style="@style/bg_1w"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="供应信息"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            style="@style/bg_ww"
            android:layout_marginRight="@dimen/margin_right"
            android:src="@drawable/right_arrow" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

    <TableLayout
        android:id="@+id/tb_layout"
        style="@style/bg_ff" >

        <TableRow style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="right"
                android:text="名称:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_pro_merchant"
                style="@style/bg_1w"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="right"
                android:text="分类:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_pro_category"
                style="@style/bg_1w"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="right"
                android:text="品牌:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_pro_brand"
                style="@style/bg_1w"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="right"
                android:text="产地:"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_pro_place"
                style="@style/bg_1w"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="right"
                android:text="库存 :"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_pro_weight"
                style="@style/bg_1w"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="right"
                android:text="价格 :"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_pro_price"
                style="@style/bg_1w"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="right"
                android:text="预付金额 :"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_pro_pre_price"
                style="@style/bg_1w"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="right"
                android:text="交割地 :"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_pro_delivery"
                style="@style/bg_1w"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>

        <View style="@style/view_line_1px" />

        <TableRow style="@style/bg_fw_all" >

            <TextView
                style="@style/bg_ww"
                android:layout_marginRight="@dimen/margin_right"
                android:gravity="right"
                android:text="详细内容 :"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/txt_pro_detail"
                style="@style/bg_1w"
                android:textColor="@color/bg_hui1"
                android:textSize="@dimen/text_size_15" />
        </TableRow>
    </TableLayout>

    <include
        layout="@layout/item_reply_state"
        android:visibility="gone" />

    <View style="@style/view_line_15dp" />

</LinearLayout>