<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/bg_ff"
    android:orientation="vertical" >

    <RelativeLayout style="@style/bg_fw" >

        <RadioGroup
            android:id="@+id/rg_group_collect"
            style="@style/bg_fw"
            android:layout_centerVertical="true"
            android:background="@color/bg_white"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_all_note"
                style="@style/bg_ww"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableBottom="@drawable/pager_select_bg"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/word_red_gray" />

            <View style="@style/view_line_h45" />

            <RadioButton
                android:id="@+id/rb_already_send"
                style="@style/bg_ww"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/pager_select_bg"
                android:gravity="center"
                android:text="已发意向"
                android:textColor="@color/word_red_gray" />

            <View style="@style/view_line_h45" />

            <RadioButton
                android:id="@+id/rb_not_send"
                style="@style/bg_ww"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/pager_select_bg"
                android:gravity="center"
                android:text="未发意向"
                android:textColor="@color/word_red_gray" />
        </RadioGroup>
    </RelativeLayout>

    <View
         style="@style/view_line_1px" />

    <com.baiyi.cmall.pageviews.MyViewPager
        android:id="@+id/vp"
        style="@style/bg_ff" >
    </com.baiyi.cmall.pageviews.MyViewPager>

</LinearLayout>