<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:paddingTop="10dp"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/checkbox_shoppingcar_pro"
        style="@style/checkbox_shoppingcar"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left" />

    <LinearLayout
        style="@style/bg_fw"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/bg_fw"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_shop_car"
                style="@style/img_shoppingcar_shop_conver"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/icon_no" />
            <LinearLayout
                style="@style/bg_fw"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_pro_name"
                    style="@style/bg_ww"
                    android:layout_gravity="center_vertical"
                    android:text="矢车菊素双葡糖苷"
                    android:textColor="@color/word_313131"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/txt_pro_sp"
                    style="@style/bg_ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="规格:99%"
                    android:textColor="@color/word_737373"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/txt_pro_price"
                    style="@style/bg_ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="￥123.00"
                    android:textColor="@color/word_ff6633"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>
        </LinearLayout>

        <com.baiyi.cmall.activities.main.mall.views.BuyNumView
            android:id="@+id/layout_buynum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_10" />
    </LinearLayout>

</LinearLayout>