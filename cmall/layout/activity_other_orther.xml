<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_bottom_15"
    android:layout_marginLeft="@dimen/margin_left"
    android:layout_marginRight="@dimen/margin_right"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/btn_shou_huo"
        style="@style/bg_fw"
        android:layout_marginTop="@dimen/margin_top_15"
        android:background="@drawable/xiadan_select_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_bottom_10"
        android:text="确认收货"
        android:textColor="@color/word_white_croci"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_cancel_form"
        style="@style/bg_fw"
        android:layout_marginTop="@dimen/margin_bottom_15"
        android:background="@drawable/cancel_select_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_bottom_10"
        android:text="取消订单"
        android:textColor="@color/word_blue_white"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_tui_kuan"
        style="@style/bg_fw"
        android:layout_marginTop="@dimen/margin_top_15"
        android:background="@drawable/xiadan_select_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_bottom_10"
        android:text="申请退款"
        android:textColor="@color/word_white_croci"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_delete_form"
        style="@style/bg_fw"
        android:layout_marginTop="@dimen/margin_bottom_15"
        android:background="@drawable/cancel_select_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_bottom_10"
        android:text="删除订单"
        android:textColor="@color/word_blue_white"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_shen_su"
        style="@style/bg_fw"
        android:layout_marginTop="@dimen/margin_top_15"
        android:background="@drawable/xiadan_select_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_bottom_10"
        android:text="申诉"
        android:textColor="@color/word_white_croci"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />

</LinearLayout>