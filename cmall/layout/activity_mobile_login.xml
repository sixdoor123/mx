<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_green"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_left_30"
        android:paddingTop="@dimen/margin_left_30" >

        <ImageView
            android:id="@+id/img_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_15"
            android:gravity="center"
            android:src="@drawable/login" />
    </LinearLayout>

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top_15"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            style="@style/bg_ww"
            android:src="@drawable/account" />

        <LinearLayout
            style="@style/bg_fw"
            android:layout_marginLeft="@dimen/margin_left"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_account"
                style="@style/bg_fw"
                android:background="@null"
                android:hint="请输入手机号"
                android:paddingLeft="5dp"
                android:singleLine="true" />

            <com.baiyi.cmall.activities.user.login.DownLineView
                android:id="@+id/account_line"
                android:layout_width="match_parent"
                android:layout_height="5dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/bg_1w"
            android:orientation="horizontal" >

            <ImageView
                style="@style/bg_ww"
                android:src="@drawable/verification" />

            <LinearLayout
                style="@style/bg_fw"
                android:layout_marginLeft="@dimen/margin_left"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/edt_code"
                    style="@style/bg_fw"
                    android:background="@null"
                    android:paddingLeft="5dp"
                    android:hint="请输入验证码"
                    android:maxLength="6"
                    android:singleLine="true" />

                <com.baiyi.cmall.activities.user.login.DownLineView
                    android:id="@+id/ver_line"
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/img_feresh_code"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_left" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_get_code"
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_bottom_10"
        android:layout_marginRight="@dimen/margin_bottom_10"
        android:background="@drawable/submit_select_bg"
        android:gravity="center"
        android:padding="@dimen/margin_bottom_10"
        android:text="获取短信验证码"
        android:textColor="@color/word_croci_white"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_bottom_15"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView style="@style/bg_1w" />

        <TextView
            android:id="@+id/txt_mobile_login"
            style="@style/bg_ww"
            android:text="普通登录"
            android:textColor="@color/bg_buyer" />
    </LinearLayout>

</LinearLayout>