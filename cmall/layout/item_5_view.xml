<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_fw"
    android:background="@drawable/bg_shuibo"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_top_15" >

        <TextView
            android:id="@+id/tv_content1"
            style="@style/bg_1w"
            android:singleLine="true"
            android:text="XXX"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_content2"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:text="XXX"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_top_15"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top_10"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_content3"
            style="@style/bg_2w"
            android:singleLine="true"
            android:text="XXX"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_content4"
            style="@style/bg_1w"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="XXX"
            android:textColor="@color/bg_hui1"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_content5"
            style="@style/bg_ww"
            android:gravity="end"
            android:singleLine="true"
            android:text="XXX"
            android:textColor="@color/bg_buyer"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <View style="@style/view_line_1px" />

</LinearLayout>