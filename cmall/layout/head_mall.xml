<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <cn.lightsky.infiniteindicator.InfiniteIndicatorLayout
        android:id="@+id/infinite_anim_circle"
        style="@style/img_mall_list_head"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top_15" />

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginTop="@dimen/margin_top_15"
        android:visibility="gone" >

        <ImageView
            style="@style/bg_ww"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/icon_mall_head_sigin" />

        <TextView
            style="@style/bg_ww"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="二级分类"
            android:textColor="@color/word_ff6633"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <com.baiyi.cmall.listitem.InScrollGridView
        android:id="@+id/gdv_category_list"
        style="@style/bg_fw"
        android:numColumns="2" />

    <LinearLayout
        style="@style/bg_fw"
        android:layout_marginBottom="@dimen/margin_bottom_15"
        android:layout_marginTop="@dimen/margin_top_15" >

        <ImageView
            style="@style/bg_ww"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/icon_mall_head_sigin" />

        <TextView
            style="@style/bg_ww"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="热销产品"
            android:textColor="@color/word_ff6633"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>