<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_green_1d8c59"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/shopping_back"
        style="@style/img_arrow"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left"
        android:background="@drawable/bg_white_hui3"
        android:padding="10dp" />

    <TextView
        style="@style/bg_ww"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/margin_bottom_10"
        android:paddingTop="@dimen/margin_top_15"
        android:text="购物车"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/btn_edit"
        style="@style/bg_ww"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_right"
        android:text="编辑"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/text_size_18" />

</RelativeLayout>