<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_search_title"
    style="@style/bg_fw"
    android:background="@color/bg_green"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_bottom_10"
    android:paddingTop="@dimen/margin_left_30" >

    <LinearLayout
        android:id="@+id/img_back"
        style="@style/bg_ww"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_white_hui3"
        android:padding="5dp" >

        <ImageView
            style="@style/bg_ww"
            android:background="@drawable/ic_back" />
    </LinearLayout>

    <com.baiyi.cmall.views.itemview.SearchView
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="@dimen/margin_right"
        android:hint="输入关键字搜索"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/bg_hui1"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/tv_search"
        style="@style/bg_ww"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_white_hui3"
        android:padding="5dp"
        android:text="搜索"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>