<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    style="@style/bg_fw"
    android:background="@color/day_bg_color"
    android:orientation="vertical"
    skin:enable="true" >
    
    <View
        style="@style/view_line_15"
        android:background="@color/day_line15_color"
        skin:enable="true" />

    <View
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        skin:enable="true" />

    <LinearLayout
        android:id="@+id/btn_discovery_table"
        style="@style/btn_item_selector_top_bottom_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true" >

        <ImageView
            android:id="@+id/img_discover_img"
            style="@style/bg_ww"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/popleft_icon_entertainment_visual"
            skin:enable="true" />

        <TextView
            android:id="@+id/txt_discover_name"
            style="@style/bg_ww"
            android:textColor="@color/default_color_313131_white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:layout_weight="1"
            android:text="@string/txt_table_name"
            skin:enable="true" />

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:src="@drawable/my_arrow_right2x"
            skin:enable="true" />
    </LinearLayout>
    <View
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        skin:enable="true" />

</LinearLayout>
