<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lin_contentview2"
    android:paddingTop="@dimen/margin_top_15">

    <LinearLayout
        android:id="@+id/lin_contentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/day_text_color_70black"/>

            <com.baiyi.jj.app.views.video.VideoPlayView
                android:id="@+id/video_play_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/show_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bj_place_10"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_play_normal"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>


</LinearLayout>
