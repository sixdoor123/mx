<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_item"
    android:gravity="center_vertical"
    android:orientation="vertical"
    skin:enable="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_left"
        android:paddingRight="@dimen/margin_right"
        skin:enable="true">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/margin_top_15"
            android:paddingBottom="@dimen/margin_top_15"
            android:enabled="true"
            android:text=""
            android:textColor="@color/word_737373_red_press"
            android:textSize="@dimen/text_size_16"
            skin:enable="true" />

        <ImageView
            android:id="@+id/img_select"
            style="@style/bg_ww"
            android:src="@drawable/img_confirm2x" />
    </LinearLayout>

    <View
        style="@style/view_line_1px"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/day_line1_color"
        skin:enable="true" />

</LinearLayout>