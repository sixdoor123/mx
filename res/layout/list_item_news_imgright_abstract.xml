<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/group_abstract_img"
    style="@style/bg_ff"
    android:orientation="vertical"
    skin:enable="true" >

    <RelativeLayout
        android:id="@+id/abstract_group"
        style="@style/bg_fw" >

        <com.baiyi.jj.app.views.MixtureTextView
            android:id="@+id/txt_abstract_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_right_list"
            android:layout_marginTop="@dimen/margin_top_5"
            android:includeFontPadding="false"
            android:textSize="@dimen/text_size_15"
            skin:enable="true" >

            <com.baiyi.jj.app.views.RemoteImageView
                android:id="@+id/img_abstract_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:scaleType="centerCrop"
                skin:enable="true" />
        </com.baiyi.jj.app.views.MixtureTextView>
    </RelativeLayout>

    <com.baiyi.jj.app.views.RemoteImageView
        android:id="@+id/img_abstract_fill_img"
        style="@style/baseimg_news_center"
        android:layout_marginTop="@dimen/margin_top_5" />

    <LinearLayout
        android:id="@+id/title_fill_line"
        style="@style/bg_fw"
        android:layout_marginTop="@dimen/margin_top_6"
        android:orientation="vertical"
        android:visibility="gone"
        skin:enable="true" >

        <include
            style="@style/bg_fw"
            layout="@layout/layout_newslist_time_fill" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_abstract_fill"
        style="@style/bg_fw"
        android:layout_marginTop="@dimen/margin_top_3"
        android:lineSpacingExtra="@dimen/spacin_text"
        android:text=""
        android:textColor="@color/day_text_color_888888"
        android:textSize="@dimen/text_size_14"
        skin:enable="true" />

</LinearLayout>