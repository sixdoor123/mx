<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    style="@style/bg_fw"
    android:orientation="vertical"
    skin:enable="true" >

    <LinearLayout
        style="@style/bg_fw"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        skin:enable="true" >

        <ImageView
            android:id="@+id/icon_news"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:duplicateParentState="true"
            skin:enable="true" />

        <TextView
            android:id="@+id/txt_news"
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_bottom_15"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:layout_marginTop="@dimen/margin_top_15"
            android:duplicateParentState="true"
            android:text="@string/name_notification"
            android:textSize="16sp"
            android:textColor="@color/word_white_red_press"
            skin:enable="true" />
    </LinearLayout>

</LinearLayout>