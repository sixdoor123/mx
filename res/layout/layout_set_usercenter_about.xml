<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bg_fw"
    android:background="@color/day_bg_color_fafafa"
    android:orientation="vertical"
    skin:enable="true">

    <LinearLayout
        android:id="@+id/btn_center_collection"
        style="@style/btn_item_selector_padall_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true">

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:src="@drawable/collection_small"
            skin:enable="true" />

        <TextView
            style="@style/bg_ww"
            android:layout_weight="1"
            android:text="@string/name_title_collect"
            android:textColor="@color/default_color_313131_white"
            android:textSize="@dimen/text_size_16"
            skin:enable="true" />

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:src="@drawable/my_arrow_right2x"
            skin:enable="true" />
    </LinearLayout>

    <View
        style="@style/view_line_1px_pading"
        android:background="@color/day_line1_color"
        skin:enable="true" />

    <LinearLayout
        android:id="@+id/btn_offline"
        style="@style/btn_item_selector_padall_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true"
        android:visibility="gone">

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:src="@drawable/icon_offline"
            skin:enable="true" />

        <TextView
            style="@style/bg_ww"
            android:layout_weight="1"
            android:text="@string/txt_offline_reading"
            android:textColor="@color/default_color_313131_white"
            android:textSize="@dimen/text_size_16"
            skin:enable="true" />

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:src="@drawable/my_arrow_right2x"
            skin:enable="true" />
    </LinearLayout>

    <View
        style="@style/view_line_1px_pading"
        android:background="@color/day_line1_color"
        skin:enable="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/btn_center_contactus"
        style="@style/btn_item_selector_padall_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true">

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:src="@drawable/icon_contact_us2x"
            skin:enable="true" />

        <TextView
            style="@style/bg_ww"
            android:layout_weight="1"
            android:text="@string/txt_contact_us"
            android:textColor="@color/default_color_313131_white"
            android:textSize="@dimen/text_size_16"
            skin:enable="true" />

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:src="@drawable/my_arrow_right2x"
            skin:enable="true" />
    </LinearLayout>


    <View
        style="@style/view_line_1px_pading"
        android:background="@color/day_line1_color"
        skin:enable="true"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/btn_other"
        style="@style/btn_item_selector_padall_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true"
        android:visibility="visible">

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:src="@drawable/icon_acconunt_other"
            skin:enable="true" />

        <TextView
            style="@style/bg_ww"
            android:layout_weight="1"
            android:text="@string/txt_other"
            android:textColor="@color/default_color_313131_white"
            android:textSize="@dimen/text_size_16"
            skin:enable="true" />

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:src="@drawable/my_arrow_right2x"
            skin:enable="true" />
    </LinearLayout>

    <View
        style="@style/view_line_1px_pading"
        android:background="@color/day_line1_color"
        skin:enable="true"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/btn_newver"
        style="@style/btn_item_selector_padall_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true"
        android:clickable="false"
        android:visibility="visible">

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:src="@drawable/acconunt_banben"
            skin:enable="true" />

        <TextView
            android:id="@+id/txt_currentver"
            style="@style/bg_ww"
            android:layout_weight="1"
            android:textColor="@color/default_color_313131_white"
            android:textSize="@dimen/text_size_16"
            skin:enable="true" />

        <ImageView
            android:id="@+id/img_newver"
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:src="@drawable/bj_yuan_red"
            android:layout_marginRight="@dimen/margin_right_10"
            skin:enable="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_newver_arrow"
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:src="@drawable/my_arrow_right2x"
            skin:enable="true"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        style="@style/bg_fw"
        android:background="@color/day_bg_color"
        android:orientation="vertical"
        skin:enable="true">

        <View
            style="@style/view_line_1px"
            android:background="@color/day_line1_color"
            skin:enable="true" />

        <View
            style="@style/view_line_15"
            android:background="@color/day_line15_color"
            skin:enable="true" />

        <View
            style="@style/view_line_1px"
            android:background="@color/day_line1_color"
            skin:enable="true" />

        <LinearLayout
            android:id="@+id/btn_sharetofriend"
            style="@style/bg_fw"
            android:layout_marginBottom="@dimen/margin_bottom_15"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_top_15"
            android:background="@drawable/btn_red_sel"
            android:gravity="center"
            android:orientation="horizontal"
            skin:enable="true">

            <ImageView
                style="@style/bg_ww"
                android:src="@drawable/icon_share" />

            <TextView
                style="@style/btn_blue_w_40"
                android:gravity="center"
                android:text="@string/txt_share_tofriend"
                android:textColor="@color/word_red_sel"
                android:textSize="@dimen/text_size_16"
                skin:enable="true" />
        </LinearLayout>

        <View
            style="@style/view_line_1px"
            android:background="@color/day_line1_color"
            skin:enable="true" />
    </LinearLayout>

</LinearLayout>