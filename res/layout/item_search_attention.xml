<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_attention"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_left"
    android:paddingRight="@dimen/margin_right"
    android:background="@drawable/selector_white_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top_10"
        android:layout_marginTop="@dimen/margin_top_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textColor="@color/day_text_color_737373"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:layout_marginRight="@dimen/margin_right_10"
            android:layout_weight="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/day_text_color"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/btn_attention"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_mycomment"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_top_5"
            android:paddingTop="@dimen/margin_top_5"
            android:text="@string/txt_attention_btn"
            android:textColor="@color/word_red_sel"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/day_line1_color" />
</LinearLayout>