<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/view_parent"
    style="@style/bg_fw"
    android:orientation="vertical"
    android:background="@drawable/my_help_center_button2x"
    skin:enable="true" >

    <LinearLayout
        android:id="@+id/btn_title"
        style="@style/bg_fw"
        android:layout_height="65dp"
        android:gravity="center"
        android:orientation="horizontal"
        skin:enable="true" >

        <TextView
            android:id="@+id/msgbox_title"
            style="@style/bg_ww"
            android:text="@string/name_notification"
            android:textColor="@color/day_text_color_black"
            android:textSize="@dimen/text_size_18"
            skin:enable="true" />
    </LinearLayout>

    <View
        style="@style/view_line_2px"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/day_line2_color"
        skin:enable="true" />

    <LinearLayout
        android:id="@+id/btn_content"
        style="@style/btn_item_selector_top_bottom_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_top_15"
        skin:enable="true" >

        <TextView
            android:id="@+id/msgbox_txt1"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:text=""
            android:textColor="@color/default_color_737373_white"
            android:textSize="@dimen/text_size_15"
            skin:enable="true" />
    </LinearLayout>

</LinearLayout>