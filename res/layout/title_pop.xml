<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/rela_title"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/day_text_color_red"
    skin:enable="true" >

    <ImageView
        style="@style/title_detail_bg_white"
        android:background="@color/day_text_color_red"
        android:visibility="visible"
        skin:enable="true" />


    <ImageView
        android:id="@+id/btn_back_channel_white"
        style="@style/bg_ww"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left"
        android:background="@drawable/btn_back_white_red"
        android:visibility="visible"
        skin:enable="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center">
	<TextView
        android:id="@+id/title_name_channel_white"
        style="@style/bg_ww"
        android:text="@string/txt_set"
        android:textColor="@color/day_text_color_write"
        android:textSize="@dimen/text_size_20"
        android:visibility="visible"
        skin:enable="true" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_webso"
        style="@style/bg_ww"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@drawable/btn_web"
        android:visibility="gone"
        skin:enable="true" />

</RelativeLayout>