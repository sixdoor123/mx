<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:skin="http://schemas.android.com/android/skin"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="@dimen/margin_left"
              android:paddingRight="@dimen/margin_right"
              android:orientation="vertical"
              android:background="@color/day_bg_color">

    <View
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        skin:enable="true"/>
    <TextView
        android:id="@+id/txt_paypay_accout"
        style="@style/bg_fw"
        android:layout_height="40dp"
        android:background="@color/day_bg_color_f8f8"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/default_color_313131_white"
        android:textSize="@dimen/text_size_16"
        skin:enable="true"/>

    <View
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        skin:enable="true"/>

    <LinearLayout
        android:id="@+id/btn_change_paypal"
        style="@style/btn_item_selector_top_bottom_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true">


        <TextView
            style="@style/bg_ww"
            android:text="@string/txt_paypal_changepaypal"
            android:textColor="@color/default_color_313131_white"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            skin:enable="true"/>

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:src="@drawable/my_arrow_right2x"
            skin:enable="true"/>
    </LinearLayout>

    <View
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        skin:enable="true"/>

    <LinearLayout
        android:id="@+id/btn_change_pwd"
        style="@style/btn_item_selector_top_bottom_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true">


        <TextView
            style="@style/bg_ww"
            android:text="@string/txt_paypal_changepwd"
            android:textColor="@color/default_color_313131_white"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            skin:enable="true"/>

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:src="@drawable/my_arrow_right2x"
            skin:enable="true"/>
    </LinearLayout>

    <View
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        skin:enable="true"/>
    <LinearLayout
        android:id="@+id/btn_forget_pwd"
        style="@style/btn_item_selector_top_bottom_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true">


        <TextView
            style="@style/bg_ww"
            android:text="@string/txt_paypal_forgetpwd"
            android:textColor="@color/default_color_313131_white"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            skin:enable="true"/>

        <ImageView
            style="@style/bg_ww"
            android:layout_centerVertical="true"
            android:src="@drawable/my_arrow_right2x"
            skin:enable="true"/>
    </LinearLayout>
    <View
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        skin:enable="true"/>

    <Button
        android:text="LOgin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:visibility="gone"/>

</LinearLayout>