<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    style="@style/bg_fw"
    android:orientation="vertical"
    skin:enable="true" >

    <View
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        skin:enable="true" />

    <LinearLayout
        style="@style/bg_fw"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@color/day_bg_color_white"
        android:orientation="horizontal"
        skin:enable="true" >

        <ImageView
            android:id="@+id/btn_comment"
            style="@style/bg_ww"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/margin_left"
            android:paddingRight="@dimen/margin_right"
            android:src="@drawable/btn_detail_bottom_comment"
            skin:enable="true" />
        <ImageView
            style="@style/bg_ww"
            android:layout_gravity="center"
            android:src="@drawable/btn_detail_bottom_comment"
            android:layout_weight="1"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/btn_collect"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_left"
            android:paddingRight="@dimen/margin_center_7.5"
            android:src="@drawable/btn_detail_bottom_collect"
            skin:enable="true" />

        <ImageView
            android:id="@+id/btn_like"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/margin_center_7.5"
            android:paddingLeft="@dimen/margin_center_7.5"
            android:src="@drawable/btn_detail_bottom_like"
            skin:enable="true" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_center_7.5"
            android:paddingRight="@dimen/margin_center_7.5"
            android:src="@drawable/btn_detail_bottom_share"
            skin:enable="true" />

        <ImageView
            android:id="@+id/btn_font"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_center_7.5"
            android:paddingRight="@dimen/margin_right"
            android:src="@drawable/btn_detail_bottom_font"
            skin:enable="true" />

    </LinearLayout>

</LinearLayout>