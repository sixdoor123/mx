<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/day_text_color_write"
    android:paddingLeft="@dimen/margin_left"
    android:paddingRight="@dimen/margin_right"
    >
        <TextView
            android:id="@+id/local_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_15"
            android:textColor="@color/day_text_color_black"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold"
            android:lineSpacingExtra="7dp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/local_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/local_title"
            android:layout_marginTop="@dimen/margin_top_10"
            android:textColor="@color/day_text_color_black"
            android:textSize="@dimen/text_size_11" />
    </RelativeLayout>

