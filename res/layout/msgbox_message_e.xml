<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/view_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/my_help_center_button2x"
    skin:enable="true" >

    <RelativeLayout
        android:id="@+id/btn_title"
        style="@style/bg_fw"
        android:layout_height="65dp"
        android:orientation="horizontal"
        skin:enable="true" >

        <TextView
            android:id="@+id/msgbox_title"
            style="@style/bg_ww"
            android:layout_centerInParent="true"
            android:text="@string/tip_dialog_title"
            android:textColor="@color/day_text_color_black"
            android:textSize="@dimen/text_size_18"
            skin:enable="true" />
    </RelativeLayout>

    <View
        style="@style/view_line_2px"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/day_line2_color"
        skin:enable="true" />

    <LinearLayout
        style="@style/btn_item_selector_top_bottom_15"
        android:background="@drawable/selector_white_item"
        android:gravity="center_vertical"
        skin:enable="true" >

        <TextView
            android:id="@+id/msgbox_txt1"
            style="@style/bg_ww"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:text=""
            android:textColor="@color/day_text_color_737373"
            android:textSize="@dimen/text_size_16"
            skin:enable="true" />
    </LinearLayout>

    <View
        style="@style/view_line_1px"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/day_line1_color"
        skin:enable="true" />

    <LinearLayout
        style="@style/bg_fw"
        android:paddingBottom="@dimen/margin_dialog_bottom_8"
        android:paddingTop="@dimen/margin_top_10"
        skin:enable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/btn_canel"
            style="@style/btn_dialog_nologin_cancel"
             android:background="@drawable/btn_blue_dailog"
            android:textColor="@color/word_737373_red_press"
            android:textSize="@dimen/text_size_16"
            android:text="@string/tip_cannel"
            skin:enable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/btn_dialog_nologin_cancel"
             android:background="@drawable/btn_blue_dailog"
            android:textColor="@color/word_737373_red_press"
            android:textSize="@dimen/text_size_16"
            android:text="@string/txt_button3"
            skin:enable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>

</LinearLayout>