<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_withdraw_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="99999999"
            android:textColor="@color/day_text_color_737373"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_withdraw_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="99999999"
            android:textColor="@color/day_text_color_737373"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_withdraw_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="99999999"
            android:textColor="@color/day_text_color_737373"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <View
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"/>
</LinearLayout>