<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.baiyi.jj.app.views.pulldownview.PullRefreshRecyScrollView
        android:id="@+id/refrsh_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                style="@style/view_line_1px"
                android:background="@color/day_line1_color" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/channel_list_top"
                style="@style/bg_fw"/>

            <TextView
                android:id="@+id/txt_addmore"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="@string/txt_addmore"
                android:textColor="@color/day_text_color_40black"
                android:textSize="@dimen/text_size_16" />

            <View
                style="@style/view_1px_margin_15"
                android:background="@color/day_line1_color" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/channel_list_bottom"
                style="@style/bg_fw" />
        </LinearLayout>
    </com.baiyi.jj.app.views.pulldownview.PullRefreshRecyScrollView>

</RelativeLayout>