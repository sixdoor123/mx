<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_item"
    style="@style/bg_fw"
    skin:enable="true">


    <com.baiyi.jj.app.views.ImageCorner
        android:id="@+id/channel_img"
        style="@style/bg_fw"
        android:background="@drawable/title_page_morex"
        android:scaleType="fitXY"
        skin:enable="true" />

    <LinearLayout
        android:id="@+id/lin_retunhome"
        style="@style/bg_fw"
        android:background="@drawable/icon_addchannel_more"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" />


    <TextView
        android:id="@+id/channel_name"
        style="@style/bg_fw"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:paddingLeft="6dp"
        android:background="@drawable/bg_channel_trans"
        android:textColor="@color/day_text_color_write"
        android:textSize="@dimen/text_size_16"
        skin:enable="true" />

    <TextView
        android:id="@+id/channel_name_more"
        style="@style/bg_ww"
        android:layout_centerInParent="true"
        android:text="@string/name_more"
        android:textColor="@color/default_color_313131_white"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone"
        skin:enable="true" />

    <ImageView
        android:id="@+id/img_check"
        style="@style/bg_ww"
        android:background="@color/day_bg_color_halftran"
        android:scaleType="center"
        android:src="@drawable/icon_channel_check"
        android:visibility="gone" />


</RelativeLayout>