<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_left"
            android:paddingRight="@dimen/margin_right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/video_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_15"
                android:textColor="@color/day_text_color_black"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold"
                android:lineSpacingExtra="7dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/video_detail_time"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/local_title"
                android:layout_marginTop="@dimen/margin_top_10"
                android:textColor="@color/day_text_color_black"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_shownocomment"
            style="@style/bg_fw"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_30"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_nocomment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:text="@string/tip_no_comment"
                android:textColor="@color/day_text_color_50black"
                android:textSize="@dimen/text_size_17" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
