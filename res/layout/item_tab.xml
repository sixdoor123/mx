<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_news" />

        <TextView
            android:id="@+id/txt_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_news"
            android:textColor="@color/tabword"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_msg_num"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@drawable/new_luber_bg"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/day_text_color_write"
        android:textSize="@dimen/text_size_10"
        android:visibility="gone" />
</RelativeLayout>
