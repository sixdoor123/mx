<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_item"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/lin_item"
    skin:enable="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_left"
        skin:enable="true" >

        <TextView
            android:id="@+id/txt_clear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/txt_contnet27"
            android:textColor="@color/day_text_color_737373"
            android:textSize="@dimen/text_size_16"
            skin:enable="true" />
    </LinearLayout>
    <View 
        style="@style/view_line_1px"
        android:background="@color/day_line1_color"
        skin:enable="true"/>

</LinearLayout>