<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bg_fw"
    android:layout_width="match_parent"
    android:gravity="right|center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_top_10"
    skin:enable="true">

    <TextView
        android:id="@+id/txt_com_time"
        style="@style/bg_ww"
        android:layout_marginLeft="@dimen/margin_left_10"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="ddddddddddddd"
        android:textColor="@color/day_text_color_50black"
        android:textSize="@dimen/text_size_11"
        skin:enable="true" />

    <LinearLayout
        android:id="@+id/lin_support"
        style="@style/bg_ww"
        android:layout_marginRight="@dimen/margin_right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_com_supp"
            style="@style/bg_ww"
            android:src="@drawable/img_com_supp"
            skin:enable="true" />

        <TextView
            android:id="@+id/txt_supp_num"
            style="@style/bg_ww"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/day_text_color_737373"
            android:textSize="@dimen/text_size_15"
            android:visibility="gone"
            skin:enable="true" />
    </LinearLayout>

</LinearLayout>