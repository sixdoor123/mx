<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    style="@style/bg_fw"
    android:orientation="vertical"
    skin:enable="true" >


    <LinearLayout
        android:id="@+id/foot_bj"
        style="@style/bg_fw"
        android:layout_width="match_parent"
        android:background="@color/day_bg_color"
        skin:enable="true" >

        <RelativeLayout
            android:id="@+id/more_loading"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            skin:enable="true" >

            <LinearLayout
                style="@style/bg_ww"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center"
                skin:enable="true" >

                <ImageView
                    android:id="@+id/foot_loading"
                    style="@style/bg_ww"
                    android:layout_gravity="center_vertical"
                    skin:enable="true" />
                <ImageView
                    android:id="@+id/foot_noload"
                    style="@style/bg_ww"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/refresh_grey"
                    android:visibility="gone"
                    skin:enable="true" />

                <TextView
                    android:id="@+id/more_text_end"
                    style="@style/bg_ww"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="@string/txt_progress_loading"
                    android:textColor="@color/default_color_737373_white"
                    android:textSize="@dimen/text_size_12"
                    skin:enable="true" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>