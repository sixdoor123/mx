<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_channel_hui"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/margin_left_10">

    <ImageView
        android:id="@+id/img_channel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="@dimen/margin_left_5" />

    <TextView
        android:id="@+id/txt_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/day_text_color_black"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>