<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_help_center_button2x"
    skin:enable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_20"
            android:layout_marginRight="@dimen/margin_right_20"
            android:gravity="center"
            android:text="@string/txt_breaktip"
            android:textColor="@color/day_text_color"
            android:textSize="@dimen/text_size_17"
            android:singleLine="true"/>


        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_15"
            android:maxLines="3"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/day_text_color_737373"
            android:textSize="@dimen/text_size_15"
            android:text="@string/txt_contnet23" />

    </LinearLayout>
    <View
        android:layout_height="2px"
        android:layout_width="fill_parent"
        android:background="@color/day_line2_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_bottom_15"
            android:paddingBottom="@dimen/margin_bottom_15"
            android:gravity="center"
            android:text="@string/txt_button_view"
            android:textColor="@color/day_text_color_737373"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            android:background="@drawable/selector_white_item" />
        <View
            android:layout_height="fill_parent"
            android:layout_width="2px"
            android:background="@color/day_line2_color"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_bottom_15"
            android:paddingBottom="@dimen/margin_bottom_15"
            android:gravity="center"
            android:text="@string/tip_cannel"
            android:textColor="@color/day_text_color_red"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            android:background="@drawable/selector_white_item" />

    </LinearLayout>


</LinearLayout>
